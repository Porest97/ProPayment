@model IEnumerable<ProPayment.Models.PaymentVerification>

@{
    ViewData["Title"] = "Index";
}

<h1>Utbetalningsverifikationer</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ssn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfMatches)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfAsHD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfAsLD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee)
